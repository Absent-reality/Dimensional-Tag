    <Grid 
        x:Name="theGrid"
        RowDefinitions="*,*,2*,*"
        ColumnDefinitions="*,3*,*"
        Padding="0,50,0,0" >
        
        <Image 
            x:Name="char_title"             
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Source="character.png"         
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Scale=".85"
            IsVisible="Hidden"
            Opacity="0">
        </Image>

        <toolkit:MediaElement    
            x:Name="sfx"          
            IsVisible="Hidden"
            ShouldAutoPlay="False"
            ShouldLoopPlayback="False"
            ShouldMute="{Binding Path= Settings.Sfx_isMute}"
            Volume="{Binding Path= Settings.Get_SfxVolume}"
            />

        <toolkit:MediaElement           
            x:Name="bgm"          
            ShouldAutoPlay="True"
            ShouldLoopPlayback="True"
            IsVisible="Hidden"
            ShouldMute="{Binding Path= Settings.Bgm_isMute}"
            Volume="{Binding Path= Settings.Get_BgmVolume}"
            />


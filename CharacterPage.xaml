        <CollectionView
            x:Name="collection"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            ItemsSource="{Binding AllCharacters}"
            IsEnabled="{Binding IsEnabled}"  
            SelectedItem="{Binding CurrentItem}" 
            SelectionChangedCommand="{Binding Character_TappedCommand}"
            SelectionChangedCommandParameter="{Binding CurrentItem}"
            Opacity="0" 
            BackgroundColor="Transparent"
            Scrolled="OnScrolled"
            SelectionMode="Single"   
            Scale="1"           
            >

            <CollectionView.ItemsLayout>
                <LinearItemsLayout                   
                    Orientation="Horizontal"
                    SnapPointsAlignment="Center"
                    SnapPointsType="Mandatory"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodel:Character" > 

                    <Grid RowDefinitions="*,*,*" Padding="10">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates" >
                                <VisualState Name="Normal"/>
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="Transparent" />
                                        <Setter Property="Opacity" Value=".5" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Image  
                            x:Name="ColImg"
                            Grid.Row="1"
                            Scale="1.25"
                            Source="{Binding Images}"
                            Margin="30,0,30,0"
                            Opacity="1"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" >

                        </Image>

                        <Label 
                            Grid.Row="2"
                            x:Name="Lbl_CharName"                                                                             
                            BackgroundColor="Transparent"
                            Text="{Binding Name}"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            TextColor="White"
                            HorizontalTextAlignment="Center"
                            VerticalOptions="Center"              
                            HorizontalOptions="Center" >

                        </Label>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Image
            x:Name="rightArrow"
            AutomationId="Right"
            Source="right_arrow.png"
            HorizontalOptions="End"
            Opacity="0"
            Grid.Row="3"
            Grid.Column="2"
            Margin="0,0,0,50"
            VerticalOptions="Center" >
            <Image.Shadow>
                <Shadow
                    Brush="DimGray"
                    Offset="-5,5"
                    Radius="5"
                    Opacity=".8" />
            </Image.Shadow>
            <Image.GestureRecognizers>
                <TapGestureRecognizer  Tapped="Arrow_Tapped"/>
            </Image.GestureRecognizers>
        </Image>

        <Image
            x:Name="leftArrow"
            AutomationId="Left"
            Source="left_arrow.png"
            HorizontalOptions="Start" 
            Opacity="0"
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,0,0,50"
            VerticalOptions="Center" >
            <Image.Shadow>
                <Shadow
                    Brush="DimGray"
                    Offset="5,5"
                    Radius="5"
                    Opacity=".8" />
            </Image.Shadow>
            <Image.GestureRecognizers>
                <TapGestureRecognizer  Tapped="Arrow_Tapped" />
            </Image.GestureRecognizers>
        </Image>

